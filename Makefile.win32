
SUBDIRS = pixman/src src

TEST_SUBDIRS = boilerplate test

all: cairo

cairo: src/cairo-features.h
	@list='$(SUBDIRS)'; for f in $$list ; do \
		echo making all in $$f... ; \
		(cd $$f ; make -f Makefile.win32) || exit 1 ; \
	done

test: cairo
 	@list='$(TEST_SUBDIRS)'; for f in $$list ; do \
		echo making all in $$f... ; \
		(cd $$f ; make -f Makefile.win32) || exit 1 ; \
	done ;
